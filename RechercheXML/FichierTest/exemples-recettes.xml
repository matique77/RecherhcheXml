<?xml-stylesheet type="text/xsl" href="exemples-recettes.xsl" ?>

<livre-recettes>
	<ingredients-base>
		<ingredient>Sel</ingredient>
		<ingredient>Poivre</ingredient>
		<ingredient>Huile</ingredient>
	</ingredients-base>
	<recettes>
		<recette portions="4" cat="entrée">
			<nom>Pattes de poulet à l'asiatique</nom>
			<ingredients>
				<ingredient qt="16">Pattes de poulet</ingredient>
				<ingredient qt="500" unite="ml">Bouillon épicé</ingredient>
			</ingredients>
		</recette>
		<recette portions="3" cat="principal">
			<nom>Le dernier repas</nom>
			<ingredients>
				<ingredient qt="600" unite="gramme">Poulet</ingredient>
				<ingredient qt="3">Amanite vireuse</ingredient>
				<ingredient qt="6">Amanite tue-mouches</ingredient>
			</ingredients>
			<commentaire>Reposez en paix</commentaire>
		</recette>
		<recette portions="4" cat="entrée">
			<nom>Pépites surprises</nom>
			<ingredients>
				<ingredient qt="300" unite="gramme">Chien (une race de caniche de préférence)</ingredient>
				<ingredient>Tempura</ingredient>
			</ingredients>
			<commentaire>Vos invités vont adorer ! Ne leur dites qu'à la fin du repas pour le chien.</commentaire>
		</recette>
		<recette portions="2" cat="entrée">
			<nom>Pong mouane kone</nom>
			<ingredients>
				<ingredient qt="2">Foetus de poussin à la coque</ingredient>
			</ingredients>
		</recette>
		<recette portions="4" cat="principal">
			<nom>Crevettes saoules</nom>
			<ingredients>
				<ingredient qt="800" unite="gramme">Crevettes bien vivantes</ingredient>
				<ingredient>Alcool 94%</ingredient>
				<ingredient>Piments forts</ingredient>
			</ingredients>
			<commentaire>Bien baigner les crevettes dans l'alcool.</commentaire>
		</recette>
	</recettes>
</livre-recettes>